<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:id="@+id/custom_row_item_main_view"
    android:background="@color/customListRowColor">

    <ImageView
        android:id="@+id/package_icon"
        android:layout_marginLeft="12dp"
        android:layout_centerVertical="true"
        android:layout_width="32dp"
        android:layout_height="32dp"
        />

    <TextView
        android:id="@+id/pushnotification_title"
        android:layout_width="wrap_content"
        android:layout_marginLeft="12dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="24dp"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/package_icon"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:layout_alignParentBottom="true"
        android:background="@color/customRowButtomLineColor"/>

</RelativeLayout>