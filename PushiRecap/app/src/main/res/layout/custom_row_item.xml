<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    android:id="@+id/custom_row_item_main_view"
    android:background="@color/customListRowColor">

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#adcf7c"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="14dp"
        android:layout_marginBottom="10dp"
        android:text="20/12/2018"/>

    <ImageView
        android:id="@+id/package_icon"
        android:layout_marginLeft="12dp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/date"
        android:layout_width="42dp"
        android:layout_height="42dp"
        />

    <TextView
        android:id="@+id/pushnotification_title"
        android:layout_width="wrap_content"
        android:layout_marginLeft="12dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@+id/pushnotification_date"
        android:layout_alignTop="@+id/package_icon"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/package_icon"
        />

    <TextView
        android:id="@+id/pushnotification_date"
        android:layout_width="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_alignTop="@+id/package_icon"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        />


    <TextView
        android:id="@+id/pushnotification_text"
        android:layout_width="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/pushnotification_title"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="24dp"
        android:layout_toRightOf="@+id/package_icon"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:layout_alignParentBottom="true"
        android:background="@color/customRowButtomLineColor"/>

</RelativeLayout>