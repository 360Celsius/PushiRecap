<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pushNotificationBGColor">

    <com.gigamole.navigationtabstrip.NavigationTabStrip
        android:id="@+id/navigation_tab_strip"
        android:layout_width="match_parent"
        app:nts_titles="@array/titles"
        app:nts_size="15sp"
        app:nts_weight="3dp"
        app:nts_factor="2.5"
        android:layout_height="40dp"
        app:nts_type="point"
        app:nts_gravity="bottom"
        app:nts_typeface="fonts/typeface.otf"
        app:nts_corners_radius="1.5dp"
        app:nts_animation_duration="300"
        android:layout_marginBottom="6dp"
        app:nts_color="@color/nav_tab_bar_navigation_text_act_inact_color"
        app:nts_active_color="@color/nav_tab_bar_navigation_text_act_inact_color"
        app:nts_inactive_color="@color/nav_tab_bar_navigation_text_act_inact_color"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/navigation_tab_strip"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    

</RelativeLayout>